<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="login_box">
    <div class="login_form">
      <h2>Log in</h2>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email",class:"input_field" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password",class:"input_field" %>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
        <%= f.submit "Log in", class:"submit_button" %>
    </div>
  </div>
<% end %>

<div class="shared_links">
<%= render "devise/shared/links" %>
</div>