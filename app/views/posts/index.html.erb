<main>
  <div class="list2">
    <div class="user">
      <div class="user_details">
        <div class="user_photo">
          <%= image_tag("profile.jpeg") %>
        </div>
        <div class="user_name">
          <h2><%= @user.name %></h2>
          <h4>Number of posts: <%= @user.posts_count %></h4>
          <div class="new_post">
            <%= link_to "Create New Post", new_user_post_path , class: "new_post_btn" %>
          </div>
        </div>
      </div>
    </div>
    <% @posts.each_with_index do |post, index| %>
      <div class="user_posts_index">

        <div class="post_title">
          <h3>Post #<%=index+1%>: <%= link_to "#{post.title}", user_post_path(@user.id, post.id) %></h3>
          <p><%= post.text %></p>
          <h4><span>Comment <%= post.comments_count %></span> <span>|</span> <span>Likes <%= post.likes_count %></span></h4>
        </div>

        <div class="post_comments">
          <% if post.most_recent_comments.length == 0 %>
            <p>No comments yet, be the first one to do so...</p>
          <% else %>
            <% post.most_recent_comments.each do |comment| %>
              <p><strong><%= comment.author.name%>:</strong> <%= comment.text%></p>
            <%end%>
          <% end %>
        </div>
        
      </div>
    <% end %>
    <div class="back_button">
      <%= link_to "Click to go back !", users_path, class: "go_back_button" %>
    </div>
  </div>
</main>
