<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div class="app_title">
      <h1>My Blog</h1>
    </div>
    <main>
      <div class="current_user">
        <div class="welcome_user">
          <% if user_signed_in? %>
            <div>
              <p><strong>Current user:</strong> <%= current_user.name %>
                (<%= link_to current_user.email%>)
              </p>
            </div>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, data: { turbo: false }, class:"logout_user_btn" %>
          <% end %>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </main>
  </body>
</html>
